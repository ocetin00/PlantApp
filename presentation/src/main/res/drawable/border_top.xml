<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Arka plan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C5000000" /> <!-- Arka plan rengi -->
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp"/> <!-- Köşe yuvarlaklığı -->
        </shape>
    </item>

    <!-- Üst sınır çizgisi -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:height="1dp"> <!-- Çizgi kalınlığı -->
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" /> <!-- Çizgi rengi -->
        </shape>
    </item>

</layer-list>