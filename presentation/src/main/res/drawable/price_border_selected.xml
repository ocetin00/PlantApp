<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">


            <!-- Arka Plan (8% Opak Beyaz) -->
            <solid android:color="#14FFFFFF" />


            <stroke
                android:width="1.5dp"
                android:color="#28AF6E" />

            <!-- Köşe Yuvarlatma -->
            <corners android:radius="14dp" />


            <gradient
                android:angle="0"
                android:endColor="#28AF6E"
                android:startColor="#3D28AF6E"
                android:type="linear" />

        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="#14FFFFFF" />

        </shape>

    </item>


</layer-list>
